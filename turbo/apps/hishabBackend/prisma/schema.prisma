// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AuthToken {
  id   String @id @default(uuid())
  user Users  @relation(fields: [userId], references: [id])
  userId Int
}

model Users {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  name         String?
  Transactions Transactions[]
  Accounts     Accounts[]
  AuthToken    AuthToken[]
}

model Transactions {
  id Int @id @default(autoincrement())
  fromName String
  toName String
  amount Decimal
  note String?
  description String?
  date DateTime
  category String
  user Users @relation(fields: [userId], references: [id])
  userId Int
  visible Boolean @default(true)
}

model Accounts {
  id Int @id @default(autoincrement())
  user Users @relation(fields: [userId], references: [id])
  userId Int
  group String
  name String
  note String
}
